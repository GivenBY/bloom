.drawer
  box(column)
  align-items: center
  margin-top: auto
  background: #1f1f1f
  border-top-left-radius: 0.3rem
  border-top-right-radius: 0.3rem
  box-shadow:
    inset 0 0 0 0.08rem rgba(255, 255, 255, 0.025),
    0 -0.1rem 0.1rem 0 rgba(0, 0, 0, 0.1),
    0 -0.1rem 0.5rem 0 rgba(0, 0, 0, 0.1),
    0 -0.5rem 1rem 0 rgba(0, 0, 0, 0.2)
  width: 100%

  &__handle
    background: #484848
    height: 0.5rem
    width: 7rem
    border-radius: 999px
    margin: 0.5rem
    transition: all 200ms easeInOutQuart

    &:hover
      background: #6b6b6b

    &:active
      background: #7f7f7f
