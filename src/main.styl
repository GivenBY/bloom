accent = #25e6ff


:root
  color: white


*
  padding: 0
  margin: 0
  box-sizing: border-box
  font-family: Inter
  font-size: 14px


@import "animations"


::selection
  color: black
  background: accent


a
  display: inline-flex
  text-decoration: none


body
  background: #1e1e1e


box(direction = "")
  display: flex
  if direction != ""
    flex-direction: direction


.flexpander
  flex-grow: 999


::-webkit-scrollbar
  width: 0.4rem
  height: 0.4rem


::-webkit-scrollbar-track
  background: none


::-webkit-scrollbar-thumb
  background: rgba(255, 255, 255, 0.25)
  border-radius: 999px

  &:hover
    background: rgba(255, 255, 255, 0.5)


::-webkit-scrollbar-corner
  background: none


materialSymbolsOutlined(wght = 300)
  font-family: Material Symbols Outlined
  font-variation-settings:
  'FILL' 0,
  'wght' wght,
  'GRAD' 0,
  'opsz' 24


